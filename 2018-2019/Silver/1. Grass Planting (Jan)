#include <stdio.h>
#include <algorithm>

using namespace std;

int n = 0;
int a[100005];

int main() {
	scanf("%d", &n);
	for(int i = 0; i < n - 1; i ++) {
		int x, y;
		scanf("%d %d", &x, &y);
		a[x - 1]++;
		a[y - 1]++;
	}
	int maxi = 0;
	for(int i = 0; i < n; i ++) {
		maxi = max(maxi, a[i]);
	}
	printf("%d\n", maxi + 1);
}
